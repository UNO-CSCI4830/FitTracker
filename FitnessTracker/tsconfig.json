{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "types": ["@testing-library/jest-native"],
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    },
    "typeRoots": [
      "node_modules/@types", 
      ".expo/types" 
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}